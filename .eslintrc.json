
{
    "root": true,
    "env": {
        "node": true
    },
    "plugins": ["eslint-plugin-unused-imports", "eslint-plugin-simple-import-sort"],

    "extends": [
        "eslint:recommended"
    ],
    "rules": {

        "unused-imports/no-unused-imports": "error",
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",

        "no-unused-vars": "warn",
        "no-empty": "warn"

    }
}